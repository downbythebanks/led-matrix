{
    "configurations": [
      {
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/desktop_build/install/main",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "preLaunchTask": "CMake: Desktop Build & Install",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
      },
      {
        "name": "Emulator",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/emulator_build/install/main",
        "args": ["--led-chain", "2", "--led-parallel", "2", "--led-rows", "64", "--led-cols", "64", "--led-emulator", "--led-emulator-scale=4"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/emulator_build/install",
        "envFile": "${workspaceFolder}/.env",
        "environment": [
          {
            "name": "CROSS_COMPILE_ROOT",
            "value": "/home/hendrik/Documents/cpp/rpi-cross-compile"
          },
          {
            "name": "VCPKG_ROOT",
            "value": "/home/hendrik/Documents/vcpkg"
          },
          {
            "name": "VCPKG_BINARY_SOURCES",
            "value": "clear;nuget,https://nuget.pkg.github.com/sshcrack/index.json,read"
          }
        ],
        "externalConsole": false,
        "MIMode": "gdb",
        "preLaunchTask": "CMake: Emulator Build & Install (no web rebuild)",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
      }
    ]
  }