{
    "version": 3,
    "configurePresets": [
        {
            "name": "cross-compile",
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/vcpkg-toolchain.cmake",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/PI.cmake",
                "VCPKG_TARGET_TRIPLET": "arm64-rpi",
                "CMAKE_MAKE_PROGRAM": "ninja",
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "WEATHER_FONT_DIRECTORY": "/home/pi/ledmat/run/weather-overview/fonts"
            }
        },
        {
            "name": "emulator",
            "binaryDir": "${sourceDir}/emulator_build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "/home/hendrik/Documents/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_MAKE_PROGRAM": "ninja",
                "ENABLE_EMULATOR": true,
                "SKIP_WEB_BUILD": true,
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ]
}