{
    "version": 6,
    "configurePresets": [
        {
            "name": "cross-compile",
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/PI.cmake",
                "VCPKG_TARGET_TRIPLET": "arm64-rpi",
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "WEATHER_FONT_DIRECTORY": "/home/pi/ledmat/run/weather-overview/fonts"
            }
        },
        {
            "name": "emulator",
            "binaryDir": "${sourceDir}/emulator_build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_MAKE_PROGRAM": "ninja",
                "ENABLE_EMULATOR": true,
                "ENABLE_CORS": true,
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "desktop",
            "hidden": true,
            "binaryDir": "${sourceDir}/desktop_build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "ENABLE_DESKTOP": true
            }
        },
        {
            "name": "desktop-linux",
            "inherits": "desktop",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_MAKE_PROGRAM": "ninja"
            }
        },
        {
            "name": "desktop-windows",
            "inherits": "desktop",
            "architecture": "x64"
        }
    ],
    "buildPresets": [
        {
            "name": "cross-compile",
            "configurePreset": "cross-compile"
        },
        {
            "name": "emulator",
            "configurePreset": "emulator"
        },
        {
            "name": "desktop-linux",
            "configurePreset": "desktop-linux"
        },
        {
            "name": "desktop-windows",
            "configurePreset": "desktop-windows"
        }
    ],
    "packagePresets": [
        {
            "name": "emulator",
            "configurePreset": "emulator",
            "generators": [
                "TGZ"
            ],
            "packageName": "led-matrix-v$cache{CMAKE_PROJECT_VERSION}"
        },
        {
            "name": "cross-compile",
            "configurePreset": "cross-compile",
            "generators": [
                "TGZ",
                "DEB"
            ],
            "packageName": "led-matrix-v$cache{CMAKE_PROJECT_VERSION}"
        },
        {
            "name": "desktop",
            "configurePreset": "desktop",
            "packageName": "desktop-v$cache{CMAKE_PROJECT_VERSION}"
        }
    ]
}