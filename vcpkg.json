{
  "dependencies": [
    "fmt",
    "nlohmann-json",
    "spdlog",
    "picosha2"
  ],
  "features": {
    "matrix": {
      "description": "Add matrix support",
      "dependencies": [
        "graphicsmagick",
        "restinio",
        "libxml2",
        "cpr",
        "magic-enum"
      ]
    },
    "emulator": {
      "description": "Dependencies needed for the emulator application.",
      "dependencies": [
        "sdl2"
      ]
    },
    "desktop": {
      "description": "Dependencies needed for the desktop application.",
      "dependencies": [
        {
          "name": "hello-imgui",
          "features": [
            "opengl3-binding",
            "glfw-binding",
            "freetype",
            "freetype-svg"
          ]
        },
        "ixwebsocket",
        "cpr"
      ]
